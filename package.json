{
  "name": "@bpleco/nodeclean",
  "version": "1.0.1",
  "description": "Global CLI utility for removing those pesky node_module folders",
  "main": "dist/index.js",
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "nodeclean": "bin/main.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "npm run clean && babel --extensions \".ts\" src --out-dir=dist --watch",
    "build": "npm run clean && babel --extensions \".ts\" src --out-dir=dist",
    "release": "npm run build && npm publish --access public",
    "format": "prettier --write ."
  },
  "author": "Ben Pleco",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/helper-module-imports": "^7.16.0",
    "@babel/node": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.1.3",
    "@types/node": "^17.0.0",
    "babel-plugin-module-resolver": "^4.1.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^8.3.0",
    "fast-folder-size": "^1.6.1",
    "fast-glob": "^3.2.7",
    "figures": "^3.2.0",
    "fs-extra": "^10.0.0",
    "inquirer": "^8.2.0",
    "prettier": "^2.7.1"
  },
  "keywords": [
    "node_modules",
    "nodeclean",
    "rm -rf node_modules",
    "development"
  ],
  "repository": {
    "url": "https://github.com/bpleco/nodeclean"
  }
}
